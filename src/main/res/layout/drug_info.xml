<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/titleBar"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/green_button"
                android:onClick="doPaizao"
                android:text="@string/rdcz_btn_pz_text"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.0"
                android:background="@drawable/green_button"
                android:onClick="doSubmit"
                android:text="@string/lblSaveJxcj"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.0"
                android:background="@drawable/green_button"
                android:onClick="doSaveAndEixt"
                android:text="@string/lblSaveExit"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="1.0"
                android:background="@drawable/green_button"
                android:onClick="doIntoOther"
                android:text="@string/lblIntoOtherStore"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblDsCode"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/txtDsCode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="text"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblDsName"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/txtDsName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="text"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblDrugBcode"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/textDrugBcode"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:inputType="text"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@id/btnZingCatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/green_button"
                        android:text="@string/lblShibie"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblDrugCode"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/txtDrugCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@id/btnZingCatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/green_button"
                        android:onClick="getStoreNum"
                        android:text="@string/stock_check"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblDrugName"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/txtDrugName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:inputType="text"
                        android:textColor="@android:color/black">

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblPh"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/txtDrugNumb"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblClm"
                        android:textColor="@android:color/black" />

                    <Spinner
                        android:id="@id/spDispSurf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spDispSurf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblClwz"
                        android:textColor="@android:color/black" />

                    <Spinner
                        android:id="@id/spDispPosi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/spDispPosi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblPrice"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/txtDrugPrice"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblKc"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/textStoreNum"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblSl"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/textSalesVolume"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="56.0dip"
                        android:layout_height="wrap_content"
                        android:text="@string/lblJgm"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@id/textSeqNumb"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:inputType="text"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@id/btnSeqCatch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/green_button"
                        android:text="@string/lblShibie"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@id/photoImg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/rdcz_img_desp"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>